
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership based on UID
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to get the role from a user's document
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    // Helper function to check if a user is a manager for a specific location
    function isDispensaryManager(userId, locationId) {
        let userDoc = get(/databases/$(database)/documents/users/$(userId)).data;
        return userDoc.role == 'dispensary' && userDoc.locationId == locationId;
    }

    // Products are public, but shouldn't be writable from the client
    match /products/{productId} {
      allow read: if true;
      // Writes are handled by server-side actions/imports
      allow write: if false; 
    }

    // Categories are public, but shouldn't be writable from the client
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Managed by backend
    }

    // Users can create their own profile.
    // They can only read/update their own profile.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if isOwner(userId);
      
      // Interactions are private to the user
      match /interactions/{interactionId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // Orders can be created by anyone (e.g., anonymous checkout).
    // Customers can read their own orders.
    // Dispensary managers can read and update orders for their specific location.
    match /orders/{orderId} {
      allow create: if true;
      allow read: if isOwner(resource.data.userId) || isDispensaryManager(request.auth.uid, resource.data.locationId);
      allow update: if isDispensaryManager(request.auth.uid, resource.data.locationId);
      allow delete: if false;
    }

    // This rule allows collection group queries.
    // It's essential for features like "Recent Reviews Feed" or admin dashboards
    // that query across all products or all users.
    match /{path=**}/{collectionId} {
      // Allow reading 'reviews' from any product, or 'orders' and 'products'
      // for authenticated users (typically admins/dispensary managers with server-side logic).
      allow list: if collectionId == 'reviews'
                 || (collectionId == 'orders' && request.auth != null)
                 || (collectionId == 'products' && request.auth != null)
                 || (collectionId == 'interactions' && request.auth != null);
    }
    
    // This rule handles specific document reads/writes within the 'reviews' subcollection.
    match /products/{productId}/reviews/{reviewId} {
        // Anyone can read any review.
        allow get, list: if true;
        
        // Allow create if user is logged in, the review belongs to them,
        // and the rating is valid.
        allow create: if request.auth != null
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.rating is number
                      && request.resource.data.rating >= 1
                      && request.resource.data.rating <= 5;
                      
        // Only the owner of a review can update or delete it.
        allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
