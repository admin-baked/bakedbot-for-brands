rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default to read-only for public collections.
    // All write operations should be handled by secure Server Actions.
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // Disallow all client writes.
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
     match /dispensaries/{locationId} {
      allow read: if true;
      allow write: if false; // All location management is done via Server Actions.
    }

    // A user can read their own document. Writes are handled by Server Actions
    // or Cloud Functions during onboarding.
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
      
      // Interactions are private to each user.
      match /interactions/{interactionId} {
         allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Anyone can read reviews. All writes are done via a secure Server Action.
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow write: if false; // Disallow all client writes.
    }

    // This collection group query is necessary for the public "Recent Reviews" feed.
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
    }
    
    // Product embeddings are public, but only written by the server.
    match /products/{productId}/productReviewEmbeddings/{docId} {
      allow read: if true;
      allow write: if false;
    }
    
    // Orders can be created via a Server Action.
    // They can be read by the user who owns the order, OR by an authorized
    // dispensary/owner who has permission to view all orders.
    match /orders/{orderId} {
      allow create: if false; // All creates via Server Action
      allow read, update: if request.auth.uid == resource.data.userId 
          || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['dispensary', 'owner', 'brand'];
    }
  }
}
