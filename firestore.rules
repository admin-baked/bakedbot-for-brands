
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Default to read-only for public collections.
    // All write operations should be handled by secure Server Actions.
    match /products/{productId} {
      // UPDATED: Products can be read if public, or if they belong to the user's brand.
      // For this app, we'll enforce brand-scoping for reads.
      allow read: if resource.data.brandId == request.auth.token.brandId || request.auth.token.role == 'owner';
      allow write: if false; // Disallow all client writes.
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
     match /dispensaries/{dispensaryId} {
      allow read: if true;
      allow write: if false; // All location management is done via Server Actions.
    }

    // A user can read their own document. Writes are handled by Server Actions
    // or Cloud Functions during onboarding.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || request.auth.token.role == 'owner';
      
      // Interactions are private to each user.
      match /interactions/{interactionId} {
         allow read, write: if request.auth.uid == userId;
      }
    }
    
    // Anyone can read reviews. All writes are done via a secure Server Action.
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow write: if false; // Disallow all client writes.
    }

    // This collection group query is necessary for the public "Recent Reviews" feed.
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
    }
    
    // Product embeddings are public, but only written by the server.
    match /products/{productId}/productReviewEmbeddings/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Product feedback can only be written by a logged-in user.
    match /products/{productId}/feedback/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
    
    // Orders can be created via a Server Action.
    // They can be read by:
    // 1. The user who owns the order.
    // 2. An owner/brand role.
    // 3. A dispensary manager, but ONLY for their specific location.
    match /orders/{orderId} {
      allow create: if false; // All creates via Server Action
      allow read, update: if request.auth.uid == resource.data.userId 
          || request.auth.token.role in ['owner', 'brand']
          || (request.auth.token.role == 'dispensary' 
              && request.auth.token.locationId == resource.data.retailerId);
    }
  }
}