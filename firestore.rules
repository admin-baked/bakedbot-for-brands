
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check ownership
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }
    
    // Helper function to get user's role from their user document
    function getRole(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data.role;
    }
    
    // Helper function to check if user is a dispensary manager for a given location
    function isDispensaryManager(userId, locationId) {
        let userDoc = get(/databases/$(database)/documents/users/$(userId)).data;
        return userDoc.role == 'dispensary' && userDoc.locationId == locationId;
    }

    // Products are public, but shouldn't be writable from the client
    match /products/{productId} {
      allow read: if true;
      allow create, update, delete: if false; // Managed by backend/import
    }

    // Categories are public, but shouldn't be writable from the client
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false; // Managed by backend
    }

    // Users can create their own profile, but only read/update their own.
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, update: if isOwner(userId);
    }
    
    // Anyone can create an order.
    // Customers can read their own orders.
    // Dispensary managers can read and update orders for their location.
    match /orders/{orderId} {
      allow create: if true;
      allow read: if isOwner(resource.data.userId) || isDispensaryManager(request.auth.uid, resource.data.locationId);
      allow update: if isDispensaryManager(request.auth.uid, resource.data.locationId);
      allow delete: if false;
    }

    // Rules for the 'reviews' collection group. This allows querying reviews
    // across all products securely.
    match /{path=**}/reviews/{reviewId} {
        // Anyone can read any review.
        allow read: if true;
        
        // Allow create if user is logged in, the review belongs to them,
        // and the rating is valid.
        allow create: if request.auth != null
                      && request.resource.data.userId == request.auth.uid
                      && request.resource.data.rating is number
                      && request.resource.data.rating >= 1
                      && request.resource.data.rating <= 5;
                      
        // Only the owner of a review can update or delete it.
        allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
