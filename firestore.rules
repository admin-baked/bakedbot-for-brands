rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // CEO gets everything
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == 'GrRRe2YR4zY0MT0PEfMPrPCsR5A3';
    }
    
    // CRITICAL: Allow guest user document creation
    match /users/guest {
      allow read, write: if true; // Allow anyone to create/read guest doc
      
      // Guest orders
      match /orders/{orderId} {
        allow read, write: if true;
        
        match /orderItems/{itemId} {
          allow read, write: if true;
        }
      }
    }
    
    // Authenticated users
    match /users/{userId} {
      allow create: if request.auth != null;
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // User orders
      match /orders/{orderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        match /orderItems/{itemId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Products, locations - public read
    match /products/{productId} {
      allow read: if true;
    }
    
    match /locations/{locationId} {
      allow read: if true;
    }
  }
}
