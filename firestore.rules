
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // CEO gets everything
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == 'GrRRe2YR4zY0MT0PEfMPrPCsR5A3';
    }
    
    // Guest users can create and read their orders.
    match /users/guest/orders/{orderId} {
      allow create: if request.auth == null;
      allow get, list: if true; // Allow anyone to read guest orders and items
      
      match /orderItems/{itemId} {
        allow create: if request.auth == null;
        allow get, list: if true;
      }
    }

    // Authenticated users can manage their own data.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      
      match /orders/{orderId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
        
        match /orderItems/{itemId} {
          allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Products and locations are public and can be read by anyone.
    match /products/{productId} {
      allow read: if true;
    }
    
    match /locations/{locationId} {
      allow read: if true;
    }
  }
}
