rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Grant public read-only access to the reviews collection group
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // For all other documents, require authentication for reads and writes.
    // This rule does NOT apply to the 'reviews' path because the more specific rule above takes precedence.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
