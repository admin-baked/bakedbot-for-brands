
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // PUBLIC-READABLE COLLECTIONS
    // The server is responsible for scoping data by brand. These rules allow
    // the public client (and server) to read the necessary data for menus.
    match /products/{productId} {
      allow read: if true;
      allow write: if false; // All writes must go through secure Server Actions.
    }
    match /categories/{categoryId} {
      allow read: if true;
      allow write: if false;
    }
     match /dispensaries/{dispensaryId} {
      allow read: if true;
      allow write: if false; // All location management is done via Server Actions.
    }

    // USER-SPECIFIC DATA
    // A user can read/update their own document. An 'owner' can manage any user.
    match /users/{userId} {
      allow read, update: if request.auth.uid == userId || request.auth.token.role == 'owner';
      
      // Interactions are private to each user.
      match /interactions/{interactionId} {
         allow read, write: if request.auth.uid == userId;
      }
    }
    
    // REVIEWS
    // Anyone can read reviews. All writes are done via a secure Server Action.
    match /products/{productId}/reviews/{reviewId} {
      allow read: if true;
      allow write: if false; // Disallow all client writes.
    }

    // This collection group query is necessary for the public "Recent Reviews" feed.
    match /{path=**}/reviews/{reviewId} {
      allow read: if true;
    }
    
    // EMBEDDINGS & FEEDBACK
    // Product embeddings are public, but only written by the server.
    match /products/{productId}/productReviewEmbeddings/{docId} {
      allow read: if true;
      allow write: if false;
    }

    // Product feedback can only be written by a logged-in user.
    match /products/{productId}/feedback/{userId} {
      allow read: if true;
      allow write: if request.auth.uid == userId;
    }
    
    // ORDERS
    // Orders can be created via a Server Action.
    // They can be read/updated by:
    // 1. The user who owns the order.
    // 2. An 'owner' or 'brand' manager, but ONLY for orders within their brand.
    // 3. A 'dispensary' manager, but ONLY for orders assigned to their specific location.
    match /orders/{orderId} {
      allow create: if false; // All creates via Server Action
      allow read, update: if request.auth.uid == resource.data.userId 
          || (request.auth.token.role == 'owner')
          || (request.auth.token.role == 'brand' && request.auth.token.brandId == resource.data.brandId)
          || (request.auth.token.role == 'dispensary' && request.auth.token.locationId == resource.data.retailerId);
    }
  }
}
