
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // CEO gets full access to everything - CHECK THIS FIRST
    match /{document=**} {
      allow read, write: if request.auth != null &&
        request.auth.uid == 'GrRRe2YR4zY0MT0PEfMPrPCsR5A3';
    }

    // Regular users can read and write their own profile.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

       // Authenticated users can create and read their own orders.
      match /orders/{orderId} {
        allow read, create: if request.auth != null && request.auth.uid == userId;

        // This allows adding items to an order.
        match /orderItems/{orderItemId} {
          allow read, create: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Guest users collection
    match /users/guest {
        allow create: if request.auth == null; // Allow creation of the guest user "document" container if needed
        
        // Guest users can create orders in their specific path
        match /orders/{orderId} {
            allow read, create: if request.auth == null;
            // This allows adding items to a guest order.
            match /orderItems/{orderItemId} {
                allow read, create: if request.auth == null;
            }
        }
    }


    // Products - public read
    match /products/{productId} {
      allow read: if true;
      // Writes are handled by the CEO rule.
      allow write: if false; 
    }

    match /products/{productId}/reviews/{reviewId} {
        allow read: if true; // Publicly readable
        allow create: if request.auth != null; // Any authenticated user can create a review
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid; // Only the review author can update/delete
    }
  }
}
