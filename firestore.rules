rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // CEO gets everything
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == 'GrRRe2YR4zY0MT0PEfMPrPCsR5A3';
    }
    
    // Guest users can create orders under the 'guest' document.
    // This rule allows unauthenticated users to create their own order.
    match /users/guest/orders/{orderId} {
      allow create: if request.auth == null;
      
      // Allow read/write for guest order items as well during creation.
      match /orderItems/{itemId} {
        allow create: if request.auth == null;
      }
    }

    // Authenticated users can create their own user document.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;

      // Authenticated users can read and update their own user document.
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      
      // Authenticated users can manage their own orders and order items.
      match /orders/{orderId} {
        allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
        
        match /orderItems/{itemId} {
          allow read, write, create, delete: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // Products and locations are public and can be read by anyone.
    match /products/{productId} {
      allow read: if true;
    }
    
    match /locations/{locationId} {
      allow read: if true;
    }
  }
}
