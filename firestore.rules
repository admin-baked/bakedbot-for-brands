
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // CEO gets everything
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == 'GrRRe2YR4zY0MT0PEfMPrPCsR5A3';
    }

    // GUEST CHECKOUT: Open access for guest cart and orders.
    // This allows unauthenticated server actions to create orders for guests.
    match /users/guest/{document=**} {
      allow read, write: if true;
    }
    
    // AUTHENTICATED USERS: Secure access to their own data.
    match /users/{userId} {
      // Allow user creation on signup.
      allow create: if request.auth != null;
      // Allow users to read and write their own profile document.
      allow read, write: if request.auth != null && request.auth.uid == userId;
      
      // USER ORDERS: Users can only access their own orders.
      match /orders/{orderId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
        
        // USER ORDER ITEMS: Users can only access items within their own orders.
        match /orderItems/{itemId} {
          allow read, write: if request.auth != null && request.auth.uid == userId;
        }
      }
    }
    
    // PUBLIC DATA: Products, locations, and reviews are public-read.
    match /products/{productId} {
      allow read: if true;
      // Allow atomic increments for feedback, but disallow other updates.
      allow update: if (
        // Check if only 'likes' or 'dislikes' is being updated
        (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['likes', 'dislikes'])) &&
        (
          // Rule for liking a product
          (
            request.resource.data.likes == resource.data.likes + 1 &&
            request.resource.data.dislikes == resource.data.dislikes
          ) ||
          // Rule for disliking a product
          (
            request.resource.data.dislikes == resource.data.dislikes + 1 &&
            request.resource.data.likes == resource.data.likes
          )
        )
      );
      
      match /reviews/{reviewId} {
          allow read: if true;
          // Allow any authenticated user to create a review.
          allow create: if request.auth != null;
      }
    }

    // Allow querying the 'reviews' collection group if the query is filtered by productId.
    // This is necessary for the getProductReviews tool to work securely.
    match /products/{productId}/reviews/{reviewId} {
       allow list: if request.query.get("productId") == productId;
    }
    
    match /locations/{locationId} {
      allow read: if true;
    }
  }
}
