rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default-deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow ANYONE to READ any document in any collection.
    // This is open for public visibility, which is what is needed
    // for the homepage reviews feed.
    match /{path=**} {
      allow read: if true;
    }

    // Allow any AUTHENTICATED user to WRITE to any document.
    // This secures all create, update, and delete operations.
    match /{document=**} {
      allow write: if request.auth != null;
    }
  }
}
