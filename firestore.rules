
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // CEO gets full access to everything - CHECK THIS FIRST
    match /{document=**} {
      allow read, write: if request.auth != null && 
        request.auth.uid == 'GrRRe2YR4zY0MT0PEfMPrPCsR5A3';
    }
    
    // Users can create and update their own profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Products - public read, but only CEO/admins can write
    match /products/{productId} {
      allow read: if true;
      allow write: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['ceo', 'admin'];
    }

    match /products/{productId}/reviews/{reviewId} {
        allow read: if true; // Publicly readable
        allow create: if request.auth != null; // Any authenticated user can create a review
        allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid; // Only the review author can update/delete
    }
    
    // Orders - users can access their own
     match /users/{userId}/orders/{orderId} {
      allow read, create: if request.auth != null && request.auth.uid == userId;
       match /orderItems/{orderItemId} {
         allow read, create: if request.auth != null && request.auth.uid == userId;
       }
    }
    
    // Guest users can create orders in a specific 'guest' path
    match /users/guest/orders/{orderId} {
        allow read, create: if request.auth == null;
        match /orderItems/{orderItemId} {
             allow read, create: if request.auth == null;
        }
    }
  }
}
